    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Linux Game Debug",
            "program": "${workspaceFolder}/build/game",
            "args": [],
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "Run Make (clang++)"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unit Debug",
            "program": "${workspaceFolder}/unit_tests/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${workspaceFolder}/unit_tests",
            "preLaunchTask": "Linux C/C++: clang++ build active file"
        },
        {
            "name": "Windows Game Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\game.exe",
            "args": [],
            "cwd": "${workspaceFolder}\\build",
            "console": "externalTerminal",
            "sourceMap": { "${workspaceFolder}": "${workspaceFolder}" },
            "preRunCommands": [
                "breakpoint set -f src\\game.cpp -l 21",
                "breakpoint set -f src\\render\\Renderer.cpp -l 148",
            ]
        }
    ]
}